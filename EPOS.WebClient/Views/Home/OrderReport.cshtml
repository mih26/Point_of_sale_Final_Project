@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "OrderReport";
}

<div class="row">
    <div class="col s12 m12">
        <h3>Sales </h3>
        <h5>@ViewBag.Date.ToString("yyyy-MMM-dd")</h5>
        <table>
            <thead>
                <tr>
                    <th>Counter</th>
                    <th>Customer</th>
                    <th>Phone</th>
                    <th>Order Amount</th>
                    <th>Items</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var m in Model)
                {
                    <tr>
                        <td>@m.CounterId</td>
                        <td>@m.CustomerName</td>
                        <td>@m.Phone</td>
                        <td>@m.OrderAmount.ToString("0.00")</td>
                        <th>@m.ItemCount</th>
                    </tr>
                }
            </tbody>
            <tbody>
                <tr>
                    <th colspan="3" >
                       Total
                    </th>
                    <td>
                         @Model.Sum(x=> x.OrderAmount).ToString("0.00")

                    </td>
                    <td>
                        @Model.Sum(x=> x.ItemCount)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

